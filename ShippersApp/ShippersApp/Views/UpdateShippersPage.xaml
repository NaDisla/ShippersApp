<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShippersApp.Views.UpdateShippersPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Editar transportista"
                   HorizontalTextAlignment="Center"
                   Margin="10,20"
                   FontAttributes="Bold"/>
            <Entry x:Name="txtShipperID"
                   IsEnabled="False"/>
            <Entry x:Name="txtCompanyName"/>
            <Entry x:Name="txtPhone"
                   Keyboard="Telephone"/>
            <Button Text="Actualizar datos"
                    x:Name="btnUpdateInfo"
                    Clicked="btnUpdateInfo_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>